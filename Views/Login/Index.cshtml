<div class="container justify-content-center" style="max-width: 500px;">
    <form asp-controller="Login" asp-action="Login">
        <div class="row mt-2">
            <div class="col">
                <h2>Login</h2>
                Please enter your Username and Password...
            </div>
        </div>

        <div class="row">
            <div class="col mt-2">
                <div class="form-group">
                    <label for="txtUserName">Username:</label>
                    <input type="text" name="myUsername" class="form-control" Maxlength="10" />
                </div>
                <div class="form-group">
                    <label for="txtPassword">Password:</label>
                    <input type="password" name="myPassword" class="form-control" maxlength="10" />
                </div>
                <div class="form-group">
                    <input type="submit" text="Submit" class="btn btn-warning" />
                    <span class="text-warning" style="margin-left:5px;">@ViewData["feedback"]</span>
                </div>
            </div>
        </div>
    </form>
</div>